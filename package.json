{
  "name": "juggernaut",
  "version": "1.0.0",
  "description": "Thirteenth weekly exercise",
  "main": "./server/dist/index.js",
  "scripts": {
    "preinstall": "cd server && npm install",
    "install": "cd client && npm install",
    "build": "cd client && rm -rf build && npm run build",
    "build:server": "cd server && npm run build",
    "build:fullstack": "npm run build && npm run build:server",
    "format:client": "cd client && npm run format",
    "format:server": "cd server && npm run format",
    "lint:client": "cd client && npm run linting -- --fix",
    "lint:server": "cd server && npm run linting -- --fix",
    "dev:server": "NODE_ENV=development cd server && npm run dev",
    "dev:client": "NODE_ENV=development cd client && npm start",
    "start": "NODE_ENV=production cd server && npm run start"

  },
  "author": "aiotrope"
}
